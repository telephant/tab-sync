  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "test:e2e": "pnpm run example & playwright test",
    "test:e2e:ui": "pnpm run example & playwright test --ui",
    "example": "node example/server.mjs"
  },
  "keywords": [
    "tab",
    "tab-syncer",
    "browser-tabs",
    "tab-communication",
    "state-sync",
    "cross-tab",
    "broadcastchannel",
    "localstorage",
    "persistence",
    "real-time"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@rollup/plugin-commonjs": "^28.0.2",
