    "@rollup/plugin-typescript": "^12.1.2",
    "@types/events": "^3.0.3",
    "@types/node": "^22.13.2",
    "express": "^4.21.2",
    "rollup": "^4.34.6",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3"
  }
}
